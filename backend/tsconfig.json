{
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "outDir": "./build", 
    "rootDir": "./src"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  
  "exclude": [
    "node_modules",
    "prisma"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}